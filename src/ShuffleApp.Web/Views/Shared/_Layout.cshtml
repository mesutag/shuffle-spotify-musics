<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>shuffle top musics from your favorite artists</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/tokenfield/dist/css/tokenfield-typeahead.css" rel="stylesheet" />
    <link href="~/lib/tokenfield/dist/css/bootstrap-tokenfield.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <div class="container">
                    <div class="row">
                        <div class="col-sm">
                            @if (User.Identity.IsAuthenticated)
                            {
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                                <h6 class="h6" title="Manage">hello @User.Identity.Name.Split(" ")[0].ToLower()!</h6>

                            </a>
                            }
                            else
                            {
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                                <h1 class="h6">shuffle top musics from your favorite artists.</h1>
                            </a>
                            }

                        </div>
                        <div class="col-sm text-center">
                            @if (User.Identity.IsAuthenticated)
                            {
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                                <h1 class="h6">shuffle top musics from your favorite artists.</h1>
                            </a>
                            }
                        </div>
                        <div class="col-sm text-right">
                            @if (User.Identity.IsAuthenticated)
                            {
                            <a class="nav-link text-dark" asp-action="Logout" asp-controller="Account">logout</a>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - shuffle top musics from your favorite artists.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/tokenfield/docs-assets/js/typeahead.bundle.js"></script>
    <script src="~/lib/tokenfield/dist/bootstrap-tokenfield.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
